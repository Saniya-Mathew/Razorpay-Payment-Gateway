<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payment_provider_form_razorpay_v25" model="ir.ui.view">
        <field name="name">Razorpay Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position='inside'>
                <group>
                    <field name="razorpay_key_id"
                           string="Key Id"
                           required="code == 'razorpay_v25' and state != 'disabled'"/>
                    <field name="razorpay_key_secret"
                           string="Key Secret"
                           required="code == 'razorpay_v25' and state != 'disabled'"
                           password="True"/>
                    <field name="razorpay_webhook_secret"
                           string="Webhook Secret" password="True"/>
                    <button string="Connect" type="object"
                            name="action_razorpay_redirect_to_oauth_url" class="btn-primary"/>
                </group>
            </group>
        </field>
    </record>

</odoo>
